---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<!-- Autor -->
		<meta name="author" content="axxving" />

		<!-- Descripcion -->
		<meta
			name="description"
			content="Juego del Número Secreto: Desarrollado durante el curso de lógica de programación con JavaScript en Alura Latam. ¡Descubre el número oculto y gana!"
		/>

		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Icono del proyecto-->
		<link
			rel="shortcut icon"
			href="/imgs/icono-play.png"
			type="image/x-icon"
		/>

		<!-- Agregando Bootstrap 5-->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>

		<!-- Bootstrap Icons -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
			rel="stylesheet"
		/>

		<!-- Estilos personalizados -->
		<link rel="stylesheet" href="/css/styles.css" />

		<!-- Nombre del proyecto -->
		<title>Número Secreto | {title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
